<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="24dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tv_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Set Threshold"
            android:gravity="center"
            android:fontFamily="@font/pro_500"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edt"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:autofillHints="0.0"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/pro__400"
            android:textSize="16sp"
            android:textColorHint="#C4C4C4C4"
            android:hint="0.0"
            android:maxLength="5"
            android:textColor="@color/white"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:layout_marginTop="36dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_ok"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_set"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Set"
            android:gravity="center"
            android:fontFamily="@font/pro_500"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_button_yellow"
            android:paddingVertical="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/edt"
            app:layout_constraintEnd_toEndOf="@id/edt"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:background="@drawable/bg_button"
            android:id="@+id/btn_cancel"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:gravity="center"
            android:fontFamily="@font/pro_500"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintStart_toStartOf="@id/edt"
            app:layout_constraintTop_toTopOf="@id/btn_ok"
            app:layout_constraintBottom_toBottomOf="@id/btn_ok"/>
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>