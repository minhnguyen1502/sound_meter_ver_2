<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="33dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/pro_500"
            android:text="@string/permission"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pro__400"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            android:text="@string/grant_these_permissions_to_use_sound_meter_2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content dialog"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:fontFamily="@font/pro__400"
            android:lines="3"
            android:maxLines="3"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_2"
            tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/tvStay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/pro_500"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingVertical="14dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="41.75dp"
                android:text="@string/stay"
                android:background="@drawable/bg_button"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/tvAgree"
                app:layout_constraintTop_toBottomOf="@id/tvContent"
                app:layout_constraintStart_toStartOf="@id/tvContent"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvAgree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_button_yellow"
                android:ellipsize="end"
                android:fontFamily="@font/pro_500"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingHorizontal="36.75dp"
                android:paddingVertical="14dp"
                android:text="@string/agree"
                android:textColor="@color/black"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/tvStay"
                app:layout_constraintTop_toTopOf="@id/tvStay"
                app:layout_constraintBottom_toBottomOf="@id/tvStay"
                app:layout_constraintEnd_toEndOf="@id/tvContent"
                android:textSize="16sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>