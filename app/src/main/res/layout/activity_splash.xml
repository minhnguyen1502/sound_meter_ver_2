<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_splash"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_120sdp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accurately measure dB levels and manage noise exposure to protect your ears and preserve a healthy auditory environment."
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="33dp"
        android:fontFamily="@font/pro__400"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pb_loading"/>
    <ProgressBar
        android:id="@+id/pb_loading"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:indeterminate="true"
        android:indeterminateTint="#E4D342"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tv_load"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_96sdp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/this_action_may_contain_advertising"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>