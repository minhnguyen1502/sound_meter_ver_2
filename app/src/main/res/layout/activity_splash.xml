<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_splash"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_120sdp"
        android:background="@color/black"
        android:contentDescription="logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sound_meter"
        android:fontFamily="@font/pro_700"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accurately_measure_db_levels_and_manage_noise_exposure_to_protect_your_ears_and_preserve_a_healthy_auditory_environment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="34dp"
        android:fontFamily="@font/pro__400"
        android:textSize="16sp"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:lines="3"
        android:ellipsize="end"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pb_loading"/>
    <ProgressBar
        android:id="@+id/pb_loading"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:indeterminate="true"
        android:indeterminateTint="#E4D342"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tv_load"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_96sdp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/this_action_may_contain_advertising"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>